/**
 *  Form Error Elements
 */
#errorExplanation {
	background: #fff url(<%= asset_path 'error-bg.png' %>) 0 0 repeat;
	border:1px solid #D89585;
	border-top:1px solid #A26D64;
	border-bottom:1px solid #E39B8C;
	margin-bottom:20px;
	padding:5px 15px 8px 15px;
	width:auto;
	font-size:12px;
	-moz-border-radius:3px;
	-webkit-border-radius:3px;
	border-radius:3px;
	text-shadow:0 1px 0 #fff;
}
#errorExplanation h2 {
	background-color:transparent;
	color:#D84F27;
	font-size:16px;
	font-weight:bold;
	padding:7px 0;
	margin:0;
	text-align:left;
}
#errorExplanation p {
	color:#333;
	margin:0;
	padding:5px;
	font-size:12px;
}
#errorExplanation ul {
	margin:0 0 0 20px;
}
#errorExplanation ul li {
	font-size:12px;
	list-style-image:none;
	list-style-position:outside;
	list-style-type:square;
}
<%= error_messages_for @contrat %>

<%= form_for(:contrat, :url => contrats_path) do |f| %>
<fieldset>
  <p>
    <b>Nom</b><br />
    <%= f.text_field :nom %>
  </p>
  <p>
    <b>Acronyme</b><br />
	  <%= f.text_field :acronyme %>
  </p>
  <p>
    <b>Numéro contrat établissement</b><br />
	  <%= f.text_field :num_contrat_etab, :size => 25, :maxlenght => 25 %>
  </p>

</fieldset>

<p class="submit">
  <%= submit_tag "Créer le contrat" %> ou <%= link_to "Annuler", contrats_path %>
</p>

<% end %>

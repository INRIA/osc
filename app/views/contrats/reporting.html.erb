<h2 id="reporting_marge"><strong>Marge</strong> d'un contrat <strong>disponible</strong></h2>
<div class="reporting">
  <table class="marge">
    <thead>
      <tr>
        <th></th>
        <th><strong>Dépenses réelles</strong></th>
        <th><strong>Dépenses totales <br />dont les prévisionnelles</strong></th>
      </tr>
    </thead>
    <tbody>
      <tr class="odd">
        <th>Dépenses réalisées éligibles</th>
        <td><%= my_number_to_currency @periodes[0]["realise"]["total_eligible"] %></td>
        <td><%= my_number_to_currency @periodes[0]["all"]["total_eligible"] %></td>
      </tr>
      <tr class="even">
        <th>Dépenses réalisées non éligibles</th>
        <td><%= my_number_to_currency @periodes[0]["realise"]["total_non_eligible"] %></td>
        <td><%= my_number_to_currency @periodes[0]["all"]["total_non_eligible"] %></td>
      </tr>
      <tr class="odd">
        <th>Total des dépenses</th>
        <td><%= my_number_to_currency @periodes[0]["realise"]["total"] %></td>
        <td><%= my_number_to_currency @periodes[0]["all"]["total"] %></td>
      </tr>
      <tr class="even">
        <th>Recettes prévues du contrat (contractuelles)</th>
        <td><%= my_number_to_currency @periodes[0]["contractuel"]["total"] %></td>
        <td><%= my_number_to_currency @periodes[0]["contractuel"]["total"] %></td>
      </tr>
      <tr class="odd">
        <th>Disponible au vu de recettes contractuelles</th>
        <td><%= my_number_to_currency(@periodes[0]["contractuel"]["total"] - @periodes[0]["realise"]["total"]) %></td>
        <td><%= my_number_to_currency(@periodes[0]["contractuel"]["total"] - @periodes[0]["all"]["total"]) %></td>
      </tr>
    </tbody>
  </table>
</div>



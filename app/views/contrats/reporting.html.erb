<h2 id="reporting_depenses_reelles">Synthèse des <strong>dépenses réellement enregistrées</strong></h2>

<div class="reporting clearfix">
  <div class="reporting-labels">
    <table>
      <thead>
        <tr class="main">
          <th><br /><br /></th>
        </tr>
        <tr>
          <th>Total des dépenses éligibles</th>
        </tr>
      </thead>
      <tbody>
        <tr class="odd">
          <th>En mission</th>
        </tr>
        <tr class="even">
          <th>En fonctionnement</th>
        </tr>
        <tr class="odd">
          <th>En équipement</th>
        </tr>
        <tr class="even">
          <th>En prestations de service</th>
        </tr>
        <tr class="odd">
          <th>En personnels contractuels</th>
        </tr>
        <tr class="even">
          <th>En personnels permanents</th>
        </tr>
      </tbody>
    </table>
  </div>
  
  <div class="reporting-scroll-container">
    <div class="reporting-first-sections clearfix" style="width:<%= (@periodes.size) * 262.5 %>px;">
      <%- for period in @periodes -%>
        <div class="data-section">
          <table class="columns-2">
            <thead>
              <tr class="main">
                <th colspan="2">
                  <%- if period['type'] == "global" -%>
                    <br />Total
                  <%- else -%>
                    Période <%= period['index'] %><br />
                    du <%= french_date period['date_debut'] %>
                    au <%= french_date period['date_fin'] %>
                  <%- end -%>
                </th>
              </tr>
              <tr>
                <th>Réalisé</th>
                <th>Contractuel</th>
              </tr>
            </thead>
            <tbody>
              <tr class="odd">
                <td>
                  <span class="with-percentage">
                    <span class="percent"><%= period["realise"]["mission_%"] %></span>
                    <%= my_number_to_currency period["realise"]["mission"] %>
                  </span>
                </td>
                <td><%= my_number_to_currency period["contractuel"]["mission"] %></td>
              </tr>
              <tr class="even">
                <td>
                  <span class="with-percentage">
                    <span class="percent"><%= period["realise"]["fonctionnement_%"] %></span>
                    <%= my_number_to_currency period["realise"]["fonctionnement"] %>
                  </span>
                </td>
                <td><%= my_number_to_currency period["contractuel"]["fonctionnement"] %></td>
              </tr>
              <tr class="odd">
                <td>
                  <span class="with-percentage">
                    <span class="percent"><%= period["realise"]["equipement_%"] %></span>
                    <%= my_number_to_currency period["realise"]["equipement"] %>
                  </span>
                </td>
                <td><%= my_number_to_currency period["contractuel"]["equipement"] %></td>
              </tr>
              <tr class="even">
                <td>
                  <span class="with-percentage">
                    <span class="percent"><%= period["realise"]["prestation_%"] %></span>
                    <%= my_number_to_currency period["realise"]["prestation"] %>
                  </span>
                </td>
                <td><%= my_number_to_currency period["contractuel"]["prestation"] %></td>
              </tr>
              <tr class="odd">
                <td>
                  <span class="with-percentage">
                    <span class="percent"><%= period["realise"]["contractuel_%"] %></span>
                    <%= my_number_to_currency period["realise"]["contractuel"] %>
                  </span>
                </td>
                <td><%= my_number_to_currency period["contractuel"]["contractuel"] %></td>
              </tr>
              <tr class="even">
                <td>
                  <span class="with-percentage">
                    <span class="percent"><%= period["realise"]["permanent_%"] %></span>
                    <%= my_number_to_currency period["realise"]["permanent"] %>
                  </span>
                </td>
                <td><%= my_number_to_currency period["contractuel"]["permanent"] %></td>
              </tr>
            </tbody>
          </table>
        </div>
      <%- end -%>
    </div>
  </div>
</div>



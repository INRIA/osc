<% @soumission_personnel = soumission_personnel %>
<div id="<%= "soumission_personnel_#{soumission_personnel.id}" %>">
	<p>
		<% @class = '' %>
		<% if !soumission_personnel.nom.nil? %>
			<% if soumission_personnel.nom.empty?  %>
				<% @class = "blank"  %>
				<% soumission_personnel.nom = "Nom" %>
			<% end %>
		<% else %>
			<% @class = "blank"  %>
			<% soumission_personnel.nom = "Nom" %>
		<% end %>

		<%= text_field 'soumission_personnel[]', 'nom',
		{ :class => 'five_cell required_blank '+@class,
			:onblur => "if (this.value == '') { $(this).addClassName('required_blank'); this.value='Nom' };",
			:onfocus =>"if (this.value == 'Nom') { $(this).removeClassName('required_blank'); this.value=''; };"
			} %>

		<% @class = '' %>
		<% if !soumission_personnel.prenom.nil? %>
			<% if soumission_personnel.prenom.empty?  %>
				<% @class = "blank"  %>
				<% soumission_personnel.prenom = "Prénom" %>
			<% end %>
		<% else %>
			<% @class = "blank"  %>
			<% soumission_personnel.prenom = "Prénom" %>
		<% end %>
		<%= text_field 'soumission_personnel[]', 'prenom',
		{ :class => 'five_cell required '+@class,
			:onblur => "if (this.value == '') { $(this).addClassName('blank'); this.value='Prénom' };",
			:onfocus =>"if (this.value == 'Prénom') { $(this).removeClassName('blank'); this.value=''; };"
			} %>
			
		<% @class = '' %>
		<% if !soumission_personnel.statut.nil? %>
			<% if soumission_personnel.statut.empty?  %>
				<% @class = "blank"  %>
				<% soumission_personnel.statut = "Statut" %>
			<% end %>
		<% else %>
			<% @class = "blank"  %>
			<% soumission_personnel.statut = "Statut" %>
		<% end %>

		<%= text_field 'soumission_personnel[]', 'statut',
		{ :class => 'five_cell required '+@class,
			:onblur => "if (this.value == '') { $(this).addClassName('blank'); this.value='Statut' };",
			:onfocus =>"if (this.value == 'Statut') { $(this).removeClassName('blank'); this.value=''; };"
			} %>

		<% @class = '' %>
		<% if !soumission_personnel.tutelle.nil? %>
			<% if soumission_personnel.tutelle.empty?  %>
				<% @class = "blank"  %>
				<% soumission_personnel.tutelle = "Tutelle" %>
			<% end %>
		<% else %>
			<% @class = "blank"  %>
			<% soumission_personnel.tutelle = "Tutelle" %>
		<% end %>

		<%= text_field 'soumission_personnel[]', 'tutelle',
		{ :class => 'five_cell required '+@class,
			:onblur => "if (this.value == '') { $(this).addClassName('blank'); this.value='Tutelle' };",
			:onfocus =>"if (this.value == 'Tutelle') { $(this).removeClassName('blank'); this.value=''; };"
			} %>

		<% @class = '' %>
		<% if !soumission_personnel.pourcentage.nil? %>
			<% if soumission_personnel.pourcentage.nil?  %>
				<% @class = "blank"  %>
				<% soumission_personnel.pourcentage = "%" %>
			<% end %>
		<% else %>
			<% @class = "blank"  %>
			<% soumission_personnel.pourcentage = "%" %>
		<% end %>

		<%= text_field 'soumission_personnel[]', 'pourcentage',
		{ :class => 'five_cell required '+@class,
			:onblur => "if (this.value == '') { $(this).addClassName('blank'); this.value='%' };",
			:onfocus =>"if (this.value == '%') { $(this).removeClassName('blank'); this.value=''; };"
		} %>

		
		<% unless controller.action_name == 'show' %>
			<%= sub_list_remove_link soumission_personnel, 'SoumissionPersonnel' %>
		<% end %>

	</p>
</div>
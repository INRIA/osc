<%if @roles.size > 0 %>
  <div class='section'>
    <h2><strong>R&ocirc;les</strong> dans l'application</h2>
      <ul class='droits_list'>
    	<% @roles.each do |role| -%>
        <li class="<%= cycle("even", "odd")%>"<strong><%= role.name%></strong>
          <br><span style='color:#888888'><%=role.commentaire%></span>
        </li>
      	<% reset_cycle %>
      <%end%>
      </ul>
  </div>
<% end %>

<div class="section">
	
	<h2><strong>Utilisateur(s)</strong> du groupe</h2>
	<% if @users.size == 0 %>
		<p class="comment">Aucun utilisateur n'est dans le groupe. Vous pouvez ajouter des utilisateurs au groupe en l'Ã©ditant.</p>
	<% end %>
	<% for user in @users %>
		<div class="box_2_per_line">
			<div class="photo">
				<%= show_user_image_small user %>
			</div>
			<div class="infos">
				<div class="primary"><%= link_to user.nom+" "+user.prenom, user_path(user) %></div>
				<div class="secondary"><%=h user.commentaire %></div>
			</div>
			<div style="clear:left;"></div>
		</div>
	<% end %>
	<div style="clear:both;"></div>
</div>
<h2><strong>Droits sp&eacute;cifiques du groupe sur des contrats</strong></h2>

<div class="section"> 
	<% if @contrats_editables.size == 0 %>
		<p class="comment">Aucun droit de modification sur des contrats n'a &eacute;t&eacute; attribu&eacute; &agrave; ce groupe.</p>
	<% else %>
		<h3>Droits de modification sur <%= pluralize(@contrats_editables.size, "contrat").html_safe() %></h3>
		<ul class="droits_list">
		<% for contrat in @contrats_editables -%>
			<li class="<%= cycle("even", "odd") %> tree_column">
				<%= contrat.acronyme %>

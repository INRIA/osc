<%= error_messages_nested_resources_for @depense_equipement %>

<%= form_for([@ligne, @depense_equipement]) do |f| %>

  <%- if (@depense_equipement.verrou == "Aucun") -%>
    <p class="change-line" id="build-migration-form-link-container">
      <%= link_to 'Déplacer cette dépense en équipement sur une autre ligne', 
                  build_migration_form_ligne_depense_equipement_path(@ligne, @depense_equipement), 
                  :id => "build-migration-form-link" %>
    </p>
    <div class="form-box parent" id="migration-form" style="display:none;"></div>
    <script type="text/javascript">
      new App.Budget.LigneMigration();
    </script>
  <% end %>
  
  <%= render :partial => 'form', :locals => { :f => f} %>
 
  <div class="form-box submit">
    <%= f.submit "Enregistrer les modifications" %> ou <%= link_to 'Annuler', ligne_depense_equipement_path(@ligne, @depense_equipement) %>
    <%- if (@ligne.contrat.is_budget_editable? current_user) and (@depense_equipement.verrou == "Aucun") -%>
    <span class="delete_depense">
    <%= link_to_remote_redbox "Supprimer la dépense",
        { :url => ask_delete_ligne_depense_equipement_path(@ligne, @depense_equipement), :method => :get},
        { :class => "destroy",
          :title => "Supprimer la dépense" }  %>
    </span>
    <%- end -%>
  </div>
<% end %>
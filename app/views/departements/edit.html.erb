<%= error_messages_for @departement %>
<div class="section">
	<h2><strong>Descriptif</strong> du département</h2>
	<%= form_for(:departement, :url => departement_path(@departement), :html => { :method => :put }) do |f| %>
	<fieldset>
	  <p>
	    <label for='departement_nom'>Nom</label><br />
	    <%= f.text_field :nom %>
	  </p>
	  <p>
	    <label for='departement_laboratoire_id'>Appartient au laboratoire</label><br />
		  <%= f.select :laboratoire_id, Laboratoire.find(:all).collect {|p| [ p.nom, p.id ] } %>
	  </p>
	  <p>
	    <label for='departement_description'>Description</label><br />
	    <%= f.text_area :description %>
	  </p>	
	</fieldset>
	  <p class="submit">
	    <%= submit_tag "Mettre à jour" %>
	  </p>
	<% end %>
</div>


<div class='section'>
	<h2><strong>Projets</strong> associés au département</h2>
	<div id="departementEditProjets">
	<%= render :partial => 'list_departement_subscriptions' %>
	</div>
	<div id="add_departement_subscription">
	<%= render :partial => 'add_departement_subscription' %>
	</div>
</div>
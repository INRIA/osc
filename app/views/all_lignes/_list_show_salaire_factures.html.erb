<tr class="factures <%= @tr_class %>">
  <th></th>
  <th></th>
  <th class="first">NÂ° de Mandat</th>
  <th>Date de Mandatement</th>
  <th>Service fait (Millesime)</th>
  <th colspan="5">Commentaire</th>
  <th class="money">Pay&eacute; HTR</th>
  <th class="money">Pay&eacute; TTC</th>
  <th colspan="3"></th>
</tr>

<% for facture in @factures %>
      <tr class="factures <%= @tr_class %>">
      <td></td>
      <%
      verrou_class = 'no-verrou'
      verrou_class = 'verrou' if facture.come_from_inria?
      %>
      <td class="<%= verrou_class %> "></td>
      <td  class="first"><abbr title="<%= facture.numero_mandat %>"><%= truncate(facture.numero_mandat, :length =>45, :ommission => '...') %></abbr></td>
			<td><%= french_small_date facture.date_mandatement %></td>
      <td>
      <% if !facture.millesime.blank? %>
        <%= french_small_date facture.millesime %>
      <% end %>
      </td>
      <td colspan="5"><abbr title="<%= facture.commentaire %>"><%= facture.commentaire %></abbr></td>
      <td class="money"><%= my_number_to_currency facture.montant_htr %></td>
      <td class="money"><%= my_number_to_currency facture.cout %></td>
      <td colspan="3"></td>
    </tr>
<% end %>
